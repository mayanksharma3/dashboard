<div style="width: 100%">
    <div class="row">
        <div class="col-6">
            <h2 style="margin-top: 10px"><i class="fa fa-location-arrow"></i> {{location}}</h2>
            <div style="color: white">
                <span style="font-size: 80px">{{temperature}}</span>
                <h6>Min: {{tempMin}}</h6>
                <h6>Max: {{tempMax}}</h6>
                <p style="text-transform: capitalize">{{description}}</p>
            </div>
        </div>
        <div class="col-6" style="text-align: center">
            <img style="margin: 0 auto; width: 100%; max-width: 250px" src="{{imageLg}}"/>
        </div>
    </div>
    <div class="row">
        {{#each daily}}
            <div class="col-2" style="margin-bottom: 15px">
                <h6 style="text-align: center">{{this.day}}</h6>
                <img style="width: 100%" src='http://openweathermap.org/img/wn/{{this.icon}}@4x.png'/>
                <p style="text-align: center;">{{this.min}}°C / {{this.max}}°C</p>
            </div>
        {{/each}}
    </div>
</div>

