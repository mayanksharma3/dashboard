<div class="row" style="text-align: center">
    <div class="row">
        <div class="col-4">
        </div>
        <div class="col-4">
            <img style="width: 100%" src="{{track.artwork_url}}"/>
        </div>
        <div class="col-4">
        </div>
    </div>

    <div class="row" style="margin-top: 20px">
        <div class="col-2">
        </div>
        <div class="col-8">
            <h3>{{track.name}}</h3>
            <h4>{{track.artist}}</h4>
            <h6>{{track.album}}</h6>
        </div>
        <div class="col-2">
        </div>
    </div>

    <div class="row" style="margin-top: 20px">

        <div class="col-4">
        </div>
        <div class="col-4">
            <div class="row">
                <div class="col-3 d-flex align-items-center justify-content-center">
                    <i onclick="location.href = '/panel/SPTFY?q=PREV'" class="fa fa-2x fa-step-backward"></i>
                </div>
                <div class="col-6">
                    <i onclick="location.href = '/panel/SPTFY?q={{playing}}'" class="fa fa-3x fa-{{playing}}"></i>
                </div>
                <div class="col-3 d-flex align-items-center justify-content-center">
                    <i onclick="location.href = '/panel/SPTFY?q=NEXT'" class="fa fa-2x fa-step-forward"></i>
                </div>
            </div>
        </div>
        <div class="col-4">
        </div>
    </div>

</div>

